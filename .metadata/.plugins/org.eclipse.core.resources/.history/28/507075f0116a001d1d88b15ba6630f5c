package com.yedam.loop;

public class Exam01 {
	public static void main(String[] args) {
		int sum = 0;
		//1) 규칙 찾기
//		sum = sum + 1; //sum = 0 + 1 -> 1
//		sum = sum + 2; //sum = 1 + 2 -> 3
//		sum = sum + 3; //sum = 3 + 3 -> 6
//		sum = sum + 4; //sum = 6 + 4 -> 10
//		sum = sum + 5; //sum = 10 + 5 -> 15 => 1 ~ 5의 합

		//1 ~ 5까지의 합을 구하는 반복문
		for(int i=0; i<=5; i++) {
			sum = sum + i;
		}
	
		//1~100 사이에서 짝수 구하는 반복문
		for(int i=1; i<=100; i++) {
			if(i % 2 == 0) { //짝수
				System.out.println(i);
			}
		}
	
	
	
	
	
	
	}
}
