package com.yedam.loop;

public class star {
	public static void main(String[] args) {
		//    * 4, 1
		//   ** 3, 2
		//  *** 2, 3
		// **** 1, 4
		//***** 0, 5
		for(int i=5; i>0; i--) {
			String star = "";
			for(int j=1; j<=5; j++) {
				if(j<i) {
				star = star + " ";
			} else if(j>=i) {
				star = star + "*";
			}
			System.out.println(star);
		}
	}
		
		
		
		
		
		
		
}
}
